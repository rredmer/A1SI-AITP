# App
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///data/crypto_investor.db

# Frontend (used by Vite)
VITE_API_BASE_URL=http://localhost:8000

# ──── Exchange API Keys ────
# Binance (https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=
BINANCE_SECRET=

# Bybit (https://www.bybit.com/app/user/api-management)
BYBIT_API_KEY=
BYBIT_SECRET=

# Kraken (https://www.kraken.com/u/security/api)
KRAKEN_API_KEY=
KRAKEN_SECRET=

# ──── Telegram Notifications ────
# Create bot via @BotFather, get chat_id via @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ──── Notification Webhook (optional) ────
# Generic webhook URL for alerts (Slack, Discord, etc.)
NOTIFICATION_WEBHOOK_URL=

# ──── Freqtrade Live Trading ────
FT_JWT_SECRET=change_me_in_production
FT_API_USER=freqtrader
FT_API_PASS=change_me_in_production

# ──── Platform Settings ────
LOG_LEVEL=INFO
DRY_RUN=true
