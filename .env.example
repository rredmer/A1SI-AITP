# ============================================================
# A1SI-AITP environment variables
# Copy to .env and fill in required values.
# Variables marked (REQUIRED) must be set for production.
# ============================================================

# ──── Django Core ────
# (REQUIRED) Random secret key for session signing. Generate with:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=change-me-to-a-random-string
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=INFO
# Log format: "json" (production) or "text" (development)
DJANGO_LOG_FORMAT=text

# ──── Encryption ────
# (REQUIRED) Fernet key for encrypting exchange credentials at rest.
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
DJANGO_ENCRYPTION_KEY=

# ──── CORS & CSRF ────
CORS_ALLOWED_ORIGINS=http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:8000

# ──── Exchange Configuration ────
# Default exchange for market data (binance, coinbase, kraken, bybit, kucoin)
EXCHANGE_ID=binance

# Default exchange API credentials (also configurable per-exchange in Settings UI)
EXCHANGE_API_KEY=
EXCHANGE_API_SECRET=

# ──── Per-Exchange API Keys (used by data pipeline) ────
# Binance (https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=
BINANCE_SECRET=

# Bybit (https://www.bybit.com/app/user/api-management)
BYBIT_API_KEY=
BYBIT_SECRET=

# Kraken (https://www.kraken.com/u/security/api)
KRAKEN_API_KEY=
KRAKEN_SECRET=

# ──── Telegram Notifications ────
# Create bot via @BotFather, get chat_id via @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ──── Notification Webhook (optional) ────
# Generic webhook URL for alerts (Slack, Discord, etc.)
NOTIFICATION_WEBHOOK_URL=

# ──── Job Processing ────
# Max parallel background job workers (adjust based on available CPU cores)
MAX_JOB_WORKERS=4

# ──── Docker Superuser ────
# Used by docker-entrypoint.sh on first container start
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@localhost
# Uncomment and set a password to auto-create superuser in Docker
# DJANGO_SUPERUSER_PASSWORD=

# ──── Freqtrade Live Trading ────
FT_API_URL=http://localhost:8080
# Env var overrides for freqtrade/config.json (double-underscore convention)
FREQTRADE__API_SERVER__JWT_SECRET_KEY=change_me_in_production
FREQTRADE__API_SERVER__USERNAME=freqtrader
FREQTRADE__API_SERVER__PASSWORD=change_me_in_production

# ──── Backup Encryption ────
# GPG symmetric passphrase for encrypted database backups
BACKUP_ENCRYPTION_KEY=

# ──── SSL (production only) ────
# Set to "true" to enforce HTTPS redirect
# SECURE_SSL_REDIRECT=false

# ──── News / Sentiment ────
NEWSAPI_KEY=

# ──── Scheduler ────
SCHEDULER_ENABLED=true
SCHEDULER_MAX_WORKERS=2

# ──── Metrics ────
# Bearer token for Prometheus metrics scraping (empty = session auth only)
METRICS_AUTH_TOKEN=

# ──── Platform Settings ────
LOG_LEVEL=INFO
DRY_RUN=true
